#!/bin/sh

# Bash script for getting battery usage
# Usage: battery [charging | discharging]

echo_usage ()
{
  echo 'usage: battery [charging | discharging]'
}

linux_get_bat ()
{
  bf=$(cat $BAT_FULL)
  bn=$(cat $BAT_NOW)
  BAT=`echo "100 * $bn / $bf" | bc`
  echo $BAT
}

freebsd_get_bat ()
{
  echo "$(sysctl -n hw.acpi.battery.life)"
}

battery_status()
{
  case $(uname -s) in
    "Linux")
      BATPATH=/sys/class/power_supply/BAT0
      STATUS=$BATPATH/status
      BAT_FULL=$BATPATH/energy_full
      BAT_NOW=$BATPATH/energy_now

      if [ "$1" = `cat $STATUS` -o "$1" = "" ]; then
        linux_get_bat
      fi
      ;;
    "FreeBSD")
      STATUS=`sysctl -n hw.acpi.battery.state`

      case $1 in
        "discharging")
          if [ $STATUS -eq 1 ]; then
            freebsd_get_bat
          fi
          ;;
        "charging")
          if [ $STATUS -eq 2 ]; then
            freebsd_get_bat
          fi
          ;;
        "")
          freebsd_get_bat
          ;;
      esac
      ;;
    "Darwin")
      case $1 in
        "discharging")
          ext="No";;
        "charging")
          ext="Yes";;
      esac

      ioreg -c AppleSmartBattery -w0 | \
        grep -o '"[^"]*" = [^ ]*' | \
        sed -e 's/= //g' -e 's/"//g' | \
        sort | \
        while read key value; do
          case $key in
            "MaxCapacity")
              export maxcap=$value;;
            "CurrentCapacity")
              export curcap=$value;;
            "ExternalConnected")
              if [ "$ext" != "$value" ]; then
                exit
              fi
              ;;
            "FullyCharged")
              if [ "$value" = "Yes" ]; then
                exit
              fi
              ;;
          esac
          if [[ -n "$maxcap" && -n $curcap ]]; then
            echo "100 * $curcap / $maxcap" | bc
            break
          fi
        done
  esac
}

case $1 in
  "discharging")
    ext="No";;
  "charging")
    ext="Yes";;
  "")
    echo_usage && exit
    ;;
esac

BATTERY_STATUS=`battery_status $1`
[ -z "$BATTERY_STATUS" ] && exit

echo ${BATTERY_STATUS}%
